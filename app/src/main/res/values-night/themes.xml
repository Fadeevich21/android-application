<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lab1_2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_3</item>
        <item name="colorPrimaryVariant">@color/gray_3</item>
        <item name="colorOnPrimary">@color/gray_3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="screen">
        <item name="android:background">@color/gray_3</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="search">
        <item name="android:src">@drawable/search_night_theme</item>
    </style>

    <style name="home_content_inner">
        <item name="android:backgroundTint">@color/nero</item>
    </style>

    <style name="home_content">
        <item name="android:backgroundTint">@color/gray_3</item>
    </style>

    <style name="button_menu">
        <item name="android:background">@drawable/border_night</item>
    </style>

    <style name="footer">
        <item name="android:background">@color/black</item>
    </style>

</resources>