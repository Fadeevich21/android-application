<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lab1_2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_grayish_yellow</item>
        <item name="colorPrimaryVariant">@color/light_grayish_yellow</item>
        <item name="colorOnPrimary">@color/light_grayish_yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="screen">
        <item name="android:background">@color/light_grayish_yellow</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="search">
        <item name="android:src">@drawable/search</item>
    </style>

    <style name="home_content">
        <item name="android:backgroundTint">@color/light_grayish_yellow</item>
    </style>

    <style name="home_content_inner">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="button_menu">
        <item name="android:background">@drawable/border_light</item>
    </style>

    <style name="footer">
        <item name="android:background">@color/white</item>
    </style>

</resources>